

{
  "initial_state": { "beams": [11, -11], "sum_beam_energy_from": [11, -11] },

  "defaults": {
    "status_final": 1,
    "ignore_pdgs": [22],               // e.g. ignore photons
    "ignore_neutrinos": true,          // drop any ±12, ±14, ±16 from matching
    "cc_autogen": true                 // auto-generate charge-conjugate rules
  },

  "channels": [
    {
      "name": "pi-pi0",
      "topology": {
        "-15": { "require": [-211, 111] },   // τ- daughters (unordered)
        "15":  { "require": [ 211, 111] }    // τ+ daughters
      },
      "assignments": {
        "tau-": { "label": "P1"   },
        "tau+": { "label": "P2"   },
        "-211": { "label": "PIPM" },
        "111@tau-": { "label": "PIZM" },
        "211":  { "label": "PIPL" },
        "111@tau+": { "label": "PIZL" }
      }
    },

    {
      "name": "3pi",
      "topology": {
        "-15": { "require": [-211, -211, 211] },
        "15":  { "require": [ 211, 211, -211] }
      },
      "assignments": {
        "tau-": { "label": "P1" },
        "tau+": { "label": "P2" },
        "-211(1)@tau-": { "label": "PIM1" },
        "-211(2)@tau-": { "label": "PIM2" },
        "211@tau-":     { "label": "PIP1" },
        "211(1)@tau+":  { "label": "PIP2" },
        "211(2)@tau+":  { "label": "PIP3" },
        "-211@tau+":    { "label": "PIM3" }
      }
    },

    {
      "name": "leptonic_e",
      "topology": {
        "-15": { "require": [11] },           // we’ll ignore neutrinos via defaults
        "15":  { "require": [-11] }
      },
      "assignments": {
        "tau-": { "label": "P1" },
        "tau+": { "label": "P2" },
        "11@tau-":  { "label": "EL"  },
        "-11@tau+": { "label": "EP"  }
      }
    }
  ]
}
